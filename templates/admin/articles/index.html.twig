{% extends 'base.html.twig' %}
{% block title 'Gerer les Articles' %}
{% block body %}

    <div class="container mt-4">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
      {% endfor %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for articles in articles  %}
            <tr>
                <td>{{ articles.title }}</td>
                <td><a href="{{ path('admin.articles.edit',{id: articles.id}) }}" class="btn btn-secondary">Editer</a>
                    <form method="post" action="{{ path('admin.articles.delete',{id: articles.id}) }}" style="display:inline-block "onsubmit="return confirm('Etes vous vraiment sur?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ articles.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.articles.new') }}" class="btn btn-primary">Cr√©e un nouveau bien</a>
        </div>
    </div>



      
{% endblock %}
